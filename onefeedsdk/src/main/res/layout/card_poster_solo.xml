<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/img_container_vg"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <View
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2f000000"/>

            <ImageView
                android:id="@+id/cover_image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/shield_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/shield_bg"
                android:fontFamily="@font/cabin"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="Lifestyle"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/badge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#87000000"
                android:fontFamily="@font/cabin"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="Editor's Choice"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_bold"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="Unusual Parathas to give A treat to your tastebuds"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/publisher_rl"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/publisher_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/publisher_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/publisher_iv"
                android:layout_toRightOf="@id/publisher_iv"
                android:fontFamily="@font/cabin_medium"
                android:text="FoodMate"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/publisher_meta_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/publisher_name_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/publisher_iv"
                android:layout_toRightOf="@id/publisher_iv"
                android:fontFamily="@font/cabin"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="by Trisha on 1' April 2018"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
