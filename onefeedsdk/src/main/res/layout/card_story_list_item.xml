<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp">

        <RelativeLayout
            android:id="@+id/img_container_vg"
            android:layout_width="170dp"
            android:layout_height="170dp">

            <View
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2f000000"/>

            <ImageView
                android:id="@+id/cover_image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/content_container_vg"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_toEndOf="@id/img_container_vg"
            android:layout_toRightOf="@id/img_container_vg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/shield_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/shield_bg"
                    android:fontFamily="@font/cabin"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="Lifestyle"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="Unusual Parathas to give A treat to your tastebuds"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/publisher_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/publisher_iv"
                        android:layout_toRightOf="@id/publisher_iv">

                        <TextView
                            android:id="@+id/publisher_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/cabin_medium"
                            android:text="FoodMate"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/publisher_meta_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/publisher_name_tv"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/cabin"
                            android:text="by Trisha on 1' April 2018"
                            android:textColor="#999999"
                            android:textSize="9sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>