<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e6ebef"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:visibility="visible"/>

        <View
            android:id="@+id/search_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_iv"
            android:layout_margin="4dp"
            android:background="@drawable/search_bg"
            android:layout_toLeftOf="@+id/plus_iv"
            android:hint="Search" />

        <TextView
            android:id="@+id/search_tv"
            android:layout_width="0dp"
            android:layout_toLeftOf="@+id/plus_iv"
            android:layout_toRightOf="@+id/back_iv"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:defaultFocusHighlightEnabled="false"
            android:focusableInTouchMode="true"
            android:focusedByDefault="false"
            android:gravity="center_vertical"
            android:text="Search"
            android:textColor="#949494"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/plus_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_add_circle_black_24dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_feed_holder_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/search_feed_holder_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/interest_feed_holder_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/progress_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>